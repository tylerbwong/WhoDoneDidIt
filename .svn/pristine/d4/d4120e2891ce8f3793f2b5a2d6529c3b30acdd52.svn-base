public class CardButton extends JButton
{
    private String cardName;
    private String fileName;
    private int cardNumber;

    public CardButton(String cardName, String fileName, int cardNumber)
    {
        super();
        this.fileName = fileName;
        this.cardNumber = cardNumber;
        this.cardName = cardName;
        setBorder(new EmptyBorder(4, 4, 4, 4));
        if (fileName == null)
        {
            setIcon(new ImageIcon(getClass().getResource("GreeceImages/Action-SuggestionCurrent.jpg")));
        }
        else
        {
            setIcon(new ImageIcon(getClass().getResource(this.fileName)));
        }
    }

    public String getCardName()
    {
        return this.cardName;
    }
    
    public int getCardNumber()
    {
        return this.cardNumber;
    }
    
